{
	"name": "sdk",
	"$schema": "../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "sdk/src",
	"projectType": "library",
	"targets": {
		"build": {
			"executor": "@nx/js:tsc",
			"outputs": ["{options.outputPath}"],
			"options": {
				"outputPath": "dist/sdk",
				"tsConfig": "sdk/tsconfig.lib.json",
				"packageJson": "sdk/package.json",
				"main": "sdk/src/index.ts",
				"assets": ["sdk/*.md"]
			}
		},
		"publish": {
			"command": "node tools/scripts/publish.mjs sdk {args.ver} {args.tag}",
			"dependsOn": ["build"]
		},
		"lint": {
			"executor": "@nx/eslint:lint",
			"outputs": ["{options.outputFile}"],
			"options": {
				"lintFilePatterns": ["sdk/**/*.ts", "sdk/package.json"]
			}
		},
		"test": {
			"executor": "@nx/jest:jest",
			"outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
			"options": {
				"jestConfig": "sdk/jest.config.ts"
			}
		}
	},
	"tags": []
}
