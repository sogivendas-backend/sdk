{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"module": "commonjs",
		"outDir": "../dist/out-tsc",
		"declaration": true,
		"types": ["node"],
		"skipLibCheck": true,
		"sourceMap": false,
		"skipDefaultLibCheck": true,
		"declarationMap": false,
	},
	"exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"],
	"include": ["src/**/*.ts"]
}
