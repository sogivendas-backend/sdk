{
	"name": "common-module",
	"$schema": "../../../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "libs/sdk/packages/common-module",
	"projectType": "library",
	"targets": {
		"build": {
			"executor": "@nx/js:tsc",
			"outputs": ["{options.outputPath}"],
			"options": {
				"rootDir": "./",
				"outputPath": "./dist/pessoas",
				"tsConfig": "libs/sdk/packages/common-module/tsconfig.lib.json",
				"packageJson": "libs/sdk/packages/common-module/package.json",
				"main": "libs/sdk/packages/common-module/libs/sdk/packages/common-module/src/index.ts",
				"assets": ["libs/sdk/packages/common-module/*.md"],
				"batch": true,
				"clean": true
			}
		},
		"publish": {
			"command": "node tools/scripts/publish.mjs common-module 0.0.1 {args.tag}",
			"dependsOn": ["build"]
		},
		"lint": {
			"executor": "@nx/eslint:lint",
			"outputs": ["{options.outputFile}"],
			"options": {
				"lintFilePatterns": ["libs/sdk/packages/common-module/**/*.ts", "libs/sdk/packages/common-module/package.json"]
			}
		},
		"test": {
			"executor": "@nx/jest:jest",
			"outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
			"options": {
				"jestConfig": "libs/sdk/packages/common-module/jest.config.ts"
			}
		}
	},
	"tags": []
}
